<%- include('./header.ejs', {name: 'Pokedex'})%>
<body>
    <h1>Pokemon World</h1>
    <h2>Select a Pokemon!</h2>
    <br>
    <% for (let i=0; i < pokemon.length; i++) { %>
    <a href="/pokemon/<%= i %>">
        <h2><%= pokemon[i].name %></h2>
        <img src="<%= pokemon[i].img %>" alt="<%= pokemon[i].name %> image">
        <h3>Type:</h3>
        <ul>
            <% for (let j=0; j < pokemon[i].type.length; j++) { %>
                <li><%= pokemon[i].type[j] %></li>
            <% } %>
        </ul>
        <h3>Stats:</h3>
        <ul>
            <li>HP: <%= pokemon[i].stats.hp %></li>
            <li>Attack: <%= pokemon[i].stats.attack %></li>
            <li>Defense: <%= pokemon[i].stats.defense %></li>
            <li>Special Attack: <%= pokemon[i].stats.attack %></li>
            <li>Special Defense: <%= pokemon[i].stats.defense %></li>
            <li>Speed: <%= pokemon[i].stats.speed %></li>
        </ul>
    </a>
    <% } %>
</body>
</html>